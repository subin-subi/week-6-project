<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Home Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .home-page {
        max-width: 800px;
        margin: 100px auto;
        padding: 20px;
        border-radius: 10px;
        background-color: #f8f9fa;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
      }
      .home-page h2 {
        margin-bottom: 20px;
      }
      .user-info {
        font-size: 1.2rem;
        margin-bottom: 30px;
        background-color: #e9ecef;
        padding: 15px;
        border-radius: 8px;
      }
      .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
      }
      .table th,
      .table td {
        text-align: center;
      }
      .action-buttons a {
        margin: 0 5px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="home-page text-center">
        <h2>Admin Page</h2>

        <div class="d-flex justify-content-between mb-4">
          <form action="/admin/home" method="get" class="w-75">
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                name="search"
                placeholder="Search for users..."
                value="<%= searchQuery %>"
              />
              <button class="btn btn-outline-secondary" type="submit">
                Search
              </button>
            </div>
          </form>
          
          <a href="/admin/createuser" class="btn btn-success">Create User</a>
        </div>

        <table class="table table-bordered table-hover">
          <thead class="table-light">
            <tr>
              <th scope="col">User ID</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
            <tr>
              <td><%= user._id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td class="action-buttons">

                <a href="/admin/edit/<%= user._id %>" class="btn btn-primary btn-sm">Edit</a>

                <a
                  href="/admin/delete/<%= user._id %>"
                  class="btn btn-danger btn-sm"
                  onclick="return confirm('Are you sure you want to delete this user?');"
                >Delete</a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>

        <form action="/admin/logout" method="post">
          <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-block">
              Signout
            </button>
          </div>
        </form>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
